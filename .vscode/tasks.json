{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run FastAPI",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/uvicorn",
      "args": [
        "pythonService.main:app",
        "--reload",
        "--host", "127.0.0.1",
        "--port", "8000"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
